service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth!=null;
    }
    match /topicImages/{image} {
      allow read;
    }
    // Allow unauthenticated uploads for injury reports (team member submissions)
    match /team/{teamId}/injury-report/{fileName} {
      allow read, write: if true;
    }
    // Allow unauthenticated signature uploads for injury reports
    match /signatures/{userId}/{fileName} {
      allow read, write: if true;
    }
  }
}
