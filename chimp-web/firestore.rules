service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /invitation/{inviteEmail} {
      allow read;
    }
    match /support/{supportId} {
      allow write;
    }
    match /team/{teamId} {
      allow read;
      allow write: if resource.data.ownerId == request.auth.uid;
      
      match /file/{fileId} {
        allow read;
        allow write: if request.auth.uid != null;
      }
      match /topic/{topicId} {
        allow read;
        allow write: if request.auth.uid != null;
      }
      match /article/{articleId} {
        allow read;
        allow write: if request.auth.uid != null;
      }
      match /self-inspection/{inspectionId} {
        // Unauthenticated team members can read inspection templates.
        // Only authenticated users can create/edit/delete templates.
        allow read;
        allow write: if request.auth.uid != null;
        
        match /inspections/{subInspectionId} {
          // Team members can read and submit/update inspection entries.
          // Only authenticated users can delete entries.
          allow read, create, update;
          allow delete: if request.auth.uid != null;
        }
      }
      match /survey/{surveyId} {
        allow read;
        allow write: if request.auth.uid != null;
      }
      match /my-training-content/{contentId} {
        allow read;
        allow write: if request.auth.uid != null;
      }
      match /log/{logId} {
        allow read, write: if request.auth.uid != null;
      }
      match /event/{eventId} {
        allow read, write: if request.auth.uid != null;
      }
    }
    match /user/{userId} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /library/{userId} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /team-members/{userId} {
      // Team members (unauthenticated) can read their own doc via member-id URL.
      // Only authenticated team owners can create/update/delete members.
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /survey/{userId} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /survey-response/{responseId} {
      // Unauthenticated team members can submit new responses only.
      // Authenticated users can read/update/delete via the wildcard rule.
      allow create;
    }
    match /incident-report/{reportId} {
      // Unauthenticated team members can submit new reports only.
      // Authenticated users can read/update/delete via the wildcard rule.
      allow create;
    }
    match /topic/{topicId} {
      allow read;
    }
    match /industry/{industryId} {
      allow read;
    }
    match /article/{articleId} {
      allow read;
    }
    match /blog/{blogId} {
      allow read;
    }
    match /blog-topic/{blogId} {
      allow read;
    }
    match /blog-response/{blogId} {
      allow read, write;
    }
    match /resource-library/{resourceId} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /chimpChatFeedback/{feedbackId} {
      // Only allow read for dev/admin users (isDev flag on user document)
      // Write is handled by Cloud Functions only (no client write)
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/user/$(request.auth.uid)).data.isDev == true;
      allow write: if false;
    }

    // ── Outreach email sequencer ──

    // Landing pages must be publicly readable (unauthenticated visitors)
    match /outreach-landing-pages/{slug} {
      allow read: if true;
      allow write: if request.auth.uid != null;
    }

    // Campaigns, recipients, settings, suppression (auth required, covered by wildcard)
    match /outreach-campaigns/{campaignId} {
      allow read, write: if request.auth.uid != null;
      match /recipients/{recipientId} {
        allow read, write: if request.auth.uid != null;
      }
    }
    match /outreach-settings/{doc} {
      allow read, write: if request.auth.uid != null;
    }
    match /outreach-suppression/{hash} {
      allow read, write: if request.auth.uid != null;
    }
    }
}